public checkApiPath(apiDefinitions) {
  for (const apiDef of apiDefinitions) {
    if (apiDef.api.charAt(0) !== '/') {
      apiDef.api = '/' + apiDef.api;
    }
    if (apiDef.host === '') {
      apiDef.host = null;
    }
  }
}



